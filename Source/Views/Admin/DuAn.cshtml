@model IEnumerable<Source.Models.DBF.Tbproject>

@{
    ViewData["Title"] = "DuAn";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>DuAn</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectHidden)
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                <img src="@item.ProjectLink" style="width:100px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectHidden)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjectId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProjectId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProjectId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
