@model IEnumerable<Source.Models.DBF.Tbcategory>

@{
    ViewData["Title"] = "NhomDuAn";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>NhomDuAn</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryDepcription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryIcon)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDepcription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryIcon)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
